<%= form_with url: trips_dashboard_accommodations_path(@trip_id), method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :details %>
  <%= f.text_area :details %>
  <%= f.submit 'Create Accommodation' %>
<% end %>
