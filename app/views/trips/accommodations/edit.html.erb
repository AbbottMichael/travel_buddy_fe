<%= form_with url: trips_dashboard_accommodation_path(@trip_id, @accommodation.id), method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value:@accommodation.name %>
  <%= f.label :location %>
  <%= f.text_field :location, value:@accommodation.location %>
  <%= f.label :details %>
  <%= f.text_area :details, value:@accommodation.details %>
  <%= f.submit 'Update Accommodation' %>
<% end %>
